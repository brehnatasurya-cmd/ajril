<head>
  <meta charset="UTF-8">
  <title>Game Klik Cepat</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #1e1e2f;
      color: white;
      text-align: center;
      margin-top: 100px;
    }

    button {
      padding: 15px 30px;
      font-size: 18px;
      border-radius: 10px;
      border: none;
      cursor: pointer;
    }

    #clickBtn {
      background: #4CAF50;
      color: white;
    }

    #startBtn {
      background: #2196F3;
      color: white;
      margin-top: 20px;
    }
  </style>
</head>
<body>

  <h1>ðŸŽ® Game Klik Cepat</h1>
  <p>Klik tombol sebanyak mungkin dalam 10 detik!</p>

  <h2>Skor: <span id="score">0</span></h2>
  <h3>Waktu: <span id="time">10</span> detik</h3>

  <button id="clickBtn" disabled>KLIK AKU!</button><br>
  <button id="startBtn">Mulai Game</button>

  <script>
    let score = 0;
    let timeLeft = 10;
    let timer;

    const clickBtn = document.getElementById("clickBtn");
    const startBtn = document.getElementById("startBtn");
    const scoreText = document.getElementById("score");
    const timeText = document.getElementById("time");

    clickBtn.onclick = function () {
      score++;
      scoreText.innerText = score;
    };

    startBtn.onclick = function () {
      score = 0;
      timeLeft = 10;
      scoreText.innerText = score;
      timeText.innerText = timeLeft;

      clickBtn.disabled = false;
      startBtn.disabled = true;

      timer = setInterval(function () {
        timeLeft--;
        timeText.innerText = timeLeft;

        if (timeLeft <= 0) {
          clearInterval(timer);
          clickBtn.disabled = true;
          startBtn.disabled = false;
          alert("Game selesai! Skor kamu: " + score);
        }
      }, 1000);
    };
  </script>

</body>
</html>
